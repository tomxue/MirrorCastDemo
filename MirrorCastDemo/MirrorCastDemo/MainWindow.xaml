<Window x:Class="MirrorCastDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MirrorCastDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="450" Width="800" Background="AliceBlue">
        <Frame x:Name="ScenarioFrame" Margin="0" Height="200" Width="800" VerticalAlignment="Top" HorizontalAlignment="Left"
               Background="Gray"/>
        <Button Height="50" Width="100" Margin="0,200,0,0" Click="Button_Click" VerticalAlignment="Top"></Button>
        <Border x:Name="StatusBorder" Margin="0,250,0,0" Height="50" Width="800" VerticalAlignment="Top" 
                BorderBrush="Red" BorderThickness="1">
            <ScrollViewer  VerticalScrollBarVisibility="Auto" MaxHeight="200">
                <!-- Use LiveSetting to enable screen readers to announce the status update. -->
                <TextBlock x:Name="StatusBlock" FontWeight="Bold" AutomationProperties.LiveSetting="Assertive"
                  MaxWidth="800" Margin="10,10,10,20" TextWrapping="Wrap"  />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
